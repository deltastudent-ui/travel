<% layout("/layouts/boilerplate") %>
<body>
  
    <div class="col-8 offset-3">
        <h2><%= listings.title %> <br></h2>
     </div>
     <div class="row row-cols-lg-3  row-cols-md-2 row-cols-sm-1 mt-3">
        <% for(let list of listings){ %>
           
            <a href="/listings/<%= list._id %>" class="listing-link">
                <div class="card col listing-card">
                    <img src="<%= list.image.url %>" class="card-img-top" alt="listings" style="height: 20rem;">
                    <div class="card-img-overlay"> </div>                     <!-- for card effect -->
                     <div class="card-body">
                      <p class="card-text">
                      <b> <%= list.title%></b> <br>
                      &#8377; <%= list.price.toLocaleString("en-IN")%>/night
            
                      </p>
                     </div>
                  </div>
            </a>
            <%  } %>
    </div>
    
</body>


